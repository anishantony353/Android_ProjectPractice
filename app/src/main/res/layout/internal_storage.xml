<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/ET_InternalStorage_name"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <EditText
        android:id="@+id/ET_InternalStorage_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/BT_InternalStorage_save"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Save to Internal Storage"/>
    <Button
        android:id="@+id/BT_InternalStorage_nextActivity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Show data in next activity"/>



</LinearLayout>
